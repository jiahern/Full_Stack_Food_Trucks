  {{!-- Display profile information (Awaiting modification to add dynamic content) --}}
  <div data-w-id="07984821-2f29-588d-4506-a6515c2e1e36" style="opacity:0;display:flex" class="profile-main-section">
    <div data-w-id="4c778bf1-4670-f50f-734e-4d4b2f1089aa" style="-webkit-transform:translate3d(0, 50px, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);-moz-transform:translate3d(0, 50px, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);-ms-transform:translate3d(0, 50px, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);transform:translate3d(0, 50px, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0)" class="profile-details-div">
      <div class="profile-pic-div"></div>
      <div class="profile-name-div">
        <h3 class="profile-first-name">{{user.firstname}}</h3>
        <h3 class="profile-last-name">{{user.lastname}}</h3>
      </div>
      <div class="profile-info-div">
        <h4 class="email-heading">Email:</h4>
        <p class="email-text">{{user.email}}</p>
      </div>
      <div class="change-profile-btn-div">
        <a data-w-id="6a849624-d392-e45c-c96a-38a25df0c2ed" href="#" class="change-btn w-button">Change Details</a>
        <a data-w-id="3c50af37-c3fb-e5dc-2ea3-7c5ec87cc291" href="#" class="change-btn change-pw w-button">Change Password</a>
        <a data-w-id="3c50af37-c3fb-e5dc-2ea3-7c5ec87cc291" href="/customer/logout" class="change-btn change-pw w-button">Log Out</a>
      </div>
    </div>
  </div>

  {{!-- Edit profile information section   --}}
  <div data-w-id="41ba4bee-b517-fd8a-a367-8700a221957e" class="change-details-form-sec">
    <div class="profile-details-div change-details-form-div">
      <div class="profile-pic-div change-form-pic-div"></div>
      <div class="details-change-form">
        <div class="form-block-3 w-form">
          <form action='/customer/changeUserInfo' method='POST' id="email-form" name="email-form" data-name="Email Form">
            <label for="first-name" class="change-details-form-label">First Name</label>
            <input name="firstname" type="text" class="change-details-form-input w-input" maxlength="256" data-name="first-name" placeholder="Enter your first name here..." id="first-name" value={{user.firstname}}>
            <label for="last-name" class="change-details-form-label">Last Name</label>
            <input name="lastname" type="text" class="change-details-form-input w-input" maxlength="256" data-name="last-name" placeholder="Enter your last name here..." id="last-name" value={{user.lastname}}>
            <div class="change-details-btn-div">
              <input type="submit" value="Save Changes" data-wait="Please wait..." data-w-id="2a52d1ee-245a-1c8f-7a55-8141f8ee432c" class="change-details-btn confirm-changes-btn w-button">
              <input type="button" value="Cancel" data-wait="Please wait..." data-w-id="af6c74a4-b92f-666e-395c-982f3654795c" class="change-details-btn canel-changes-btn w-button">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  {{!-- Change password section --}}
  <div data-w-id="a7bbc3f1-a81b-346c-d115-a306686b3918" style="display:none" class="change-details-form-sec change-ps-form-sec">
    <div class="profile-details-div change-details-form-div">
      <div class="profile-pic-div change-form-pic-div"></div>
      <div class="details-change-form">
        <div class="form-block-3 w-form">
          <form action='/customer/changeUserPassword' method='POST' id="email-form" name="email-form" data-name="Email Form">
            <label for="first-name-2" class="change-details-form-label">Password</label>
            <input name="password" type="password" pattern="(?=.*\d)(?=.*[a-z]|[A-Z]).{8,}" title="Password must contain at least 8 characters with at least one number and one alphabet character" class="change-details-form-input w-input" maxlength="256" data-name="First Name 2" placeholder="Enter your password here..." id="first-name-2" required="">
            <div class="change-details-btn-div">
              <input type="submit" value="Save Changes" data-wait="Please wait..." class="change-details-btn confirm-changes-btn w-button">
              <input type="button" value="Cancel" data-wait="Please wait..." data-w-id="a7bbc3f1-a81b-346c-d115-a306686b3926" class="change-details-btn canel-changes-btn w-button">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=60a214d75c9dd322bc62cd6d" type="text/javascript" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
